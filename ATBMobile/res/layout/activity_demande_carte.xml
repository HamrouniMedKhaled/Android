<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_atbm"
    style="@style/LoginFormContainer"
    android:orientation="vertical"
    tools:context=".DemandeCarteActivity" >

    <TextView 
                style="@style/titre_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/titre_activity_demande_carte"/>
            
            <ImageView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:contentDescription="@string/divider"
               android:paddingBottom="2dp"
               android:paddingLeft="5dp"
               android:paddingRight="5dp"
               android:paddingTop="2dp"
               android:scaleType="fitXY"
               style="@style/Divider"
               android:src="@android:drawable/divider_horizontal_dim_dark"
               android:layout_marginTop="20dp"
               android:layout_margin="20dp"
            />
            
            <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/carte_porteur" 
        />
        
        <EditText 
               android:id="@+id/editporteur"
               style="@style/champs_text"
               android:hint="@string/hint_carte_porteur"
               android:inputType="text"
               android:maxLength="20"
               android:singleLine="true"
               />
        
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/carte_type" 
        />
        
            <Spinner
            android:id="@+id/carte_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/carte_plafond" 
        />
        
            <Spinner
            android:id="@+id/carte_plafond"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/carte_validite" 
        />
        
            <Spinner
            android:id="@+id/carte_validite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            
        <Button
                android:id="@+id/button_demande_c"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_gravity="center"
                android:width="150dp"
                style="@style/text_button"
                android:background="@drawable/boutonpersonnalise"
                android:text="@string/chequier_demande"/>

</LinearLayout>
